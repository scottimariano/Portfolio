---
import { Image } from 'astro:assets';
import Tags from '@components/ui/Tags.astro';
interface Props {
	url?: string;
	alt?: string;
	title?: string;
	tags: string[];
	imageSource?: string;
	children?: HTMLElement | HTMLElement[];
}

const { url = '#', alt = 'Project image', title = 'Project title', tags = ['Tags'], imageSource = 'image source'} = Astro.props;

---

<section class="w-full p-4 flex justify-center md:w-1/2 lg:w-1/3">
	<article
		data-testId="card"
		class="rounded-xl bg-white p-3 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl"
	>
		<a href={url} aria-label="link to project" target="_blank">
			<div class="relative flex items-end overflow-hidden rounded-xl">
				<Image
					src={imageSource}
					alt={alt}
					format="png"
					width={250}
					height={250}
					loading="eager"
				/>
			</div>
			<div class="mt-1 p-2">
				<h3 class="text-xl text-orange lg:text-2xl text-center">{title}</h3>
				<Tags tags={tags} />
			</div>
		</a>
	</article>
</section>