---
import { Image, useTheme } from '@astrojs/image/components';


import docker from '@assets/logos/dockerResized.png';
import java from '@assets/logos/javaResized.png';
import js from '@assets/logos/jsResized.png';
import laravel from '@assets/logos/laravelResized.png';
import nextjs from '@assets/logos/nextjsResized.png';
import node from '@assets/logos/nodeResizedBlack.png';
import php from '@assets/logos/phpResized.png';
import python from '@assets/logos/pythonResized.png';
import react from '@assets/logos/reactResized.png';
import spring from '@assets/logos/springResized.png';
import sql from '@assets/logos/sqlResized.png';

const logos = [
  {
    name: "Java",
    src: java,
    alt: "Logo de Java",
  },
  {
    name: "PHP",
    src: php,
    alt: "Logo de PHP",
  },
  {
    name: "JS",
    src: js,
    alt: "Logo de JavaScript",
  },
  {
    name: "Node",
    src: node,
    alt: "Logo de Node.js"
  },
  {
    name: "Python",
    src: python,
    alt: "Logo de Python",
  },
  {
    name: "Laravel",
    src: laravel,
    alt: "Logo de Laravel",
  },
  {
    name: "Spring",
    src: spring,
    alt: "Logo de Spring",
  },
  {
    name: "Next.js",
    src: nextjs,
    alt: "Logo de Next.js",
  },
  {
    name: "React",
    src: react,
    alt: "Logo de React",
  },
  {
    name: "SQL",
    src: sql,
    alt: "Logo de SQL",
  },
  {
    name: "Docker",
    src: docker,
    alt: "Logo de Docker",
  }
];



---
<section
	data-testid="stack"
	id="stack"
	class="mb-10 flex flex-col items-center justify-center lg:mb-0 lg:h-screen lg:flex-row"
>
	<div class="w-full text-justify text-black dark:text-white lg:w-2/3">

		<div class="relative flex rounded-xl flex-wrap justify-center">
				{logos.map((logo)=> {
					return (
						<Image
							src={logo.src}
							alt={logo.alt}
							format="png"
							height={75}
							aspectRatio="10:5"
							loading="eager"
							class= "m-5 transition duration-300 ease-in-out hover:scale-110"
						/>
					)
				})}
				
		</div>
	</div>
	<div class="mb-10 flex w-full flex-col items-center justify-center lg:mb-0 lg:w-1/3">
		<h2 class="font-monospace text-2xl text-orange lg:text-4xl">STACK</h2>
		<span class="mb-6 ml-2 h-1 w-10 bg-orange"></span>
	</div>
</section>
