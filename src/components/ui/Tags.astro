---
export interface Props {
	tags?: string[];
}

const { tags } = Astro.props;
---

{
	tags && (
		<div class="mt-2 grid grid-cols-3 gap-1 justify-items-center">
			{tags.map((tag) => (
				<span class="flex rounded py-2 text-xs text-black lg:py-1">#{tag}</span>
			))}
		</div>
	)
}
